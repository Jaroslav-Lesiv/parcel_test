@media (min-width: 43.75em)
    .wrapper
        font-size: 1em;
        line-height: 1.375;
    h1 
        font-size: 2.5em;
        line-height: 1.125;

    h2 
        font-size: 2em;
        /* 2x body copy size = 32px */
        line-height: 1.25;
        
    h3 
        font-size: 1.5em;
        /* 1.5x body copy size = 24px */
        line-height: 1.25;
    h4 
        line-height: 1.22222222;
        /* (22px / 18px */

@media (min-width: 56.25em) {
  h1{
    font-size: 3em;
    line-height: 1.05;}
  h2{
    font-size: 2.25em;
    /* 2.25x body copy size = 36px */
    line-height: 1.25;}
  h3{
    font-size: 1.75em;
    /* 1.75x body copy size = 28px */
    line-height: 1.25;}
  blockquote {
    font-size: 1.5em;
    /* 24px / 16px = */
    line-height: 1.45833333;}
    /* 35px / 24px */
}
h1
  font-size: 2em;
  line-height: 1.25;

h2
  font-size: 1.625em;
  /* 1.625x body copy size = 26px */
  line-height: 1.15384615;
  /* 30px / 26px */

