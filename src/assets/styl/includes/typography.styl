.text
    &-center
        text-align: center
    &-left
        text-align: left
    &-right
        text-align: right
    &-uppercase
        text-transform: uppercase
    &-lowercase
        text-transform: lowercase


body, h1, h2, h3, h4, h5, h6, button,  span,p, strong,a
    font-size-adjust: 0.5
    text-rendering: optimizeLegibility;
    font-weight: 400
    line-height: 1.7
    font-family: $font, 'Raleway','Helvetica','Arial',sans-serif
    &.bold
        font-weight: 600
body, h1, h2, h3, h4, h5, h6, button,  span,p
    color: $colorGrey
    font-family: inherit
p
    font-size: 14px
p, div, li
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
h1,h2,h3,h4,h5,h6
